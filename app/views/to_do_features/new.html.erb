<% content_for :title, "New to do feature" %>

<h1>New to do feature</h1>

<%= form_with model: @to_do_feature do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
<br>

<div>
  <%= link_to "Back to to do features", to_do_features_path %>
</div>
