<h1>User List</h1>
<table class="table">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Id</th>
    <th scope="col">Email</th>
    <th scope="col">Password</th>
    <th scope="col">CreatedAt</th>
    <th scope="col">UpdatedAt</th>
    <th scope="col">Action</th>
  </tr>
  </thead>
  <tbody>
  <%
    @users.each do |user|
  %>
  <tr>
    <th scope="row">1</th>
    <td><%= user.id %></td>
    <td><%=user.email %></td>
    <td><%=user.password%></td>
    <td><%=user.created_at%></td>
    <td><%=user.updated_at%></td>
    <td>
      <%= link_to  "Edit",edit_user_path(user)%>
      <%= button_to "Delete", user, method: :delete, data: {turbo_confirm: "Are you sure?"}%>
    </td>
  </tr>
  <% end %>
  </tbody>
  <%= link_to "New User", new_user_path %>
  <%= link_to "Home", root_path %>
</table>
